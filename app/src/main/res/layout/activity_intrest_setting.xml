<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_interest_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:backgroundTint="@color/colorBackgroundDark">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:id="@+id/toolbar_title"
                android:text="@string/intrest_setting_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:fontFamily="@font/nanum_square"/>

            <Button
                android:id="@+id/btn_interest_setting_back"
                android:layout_height="wrap_content"
                android:layout_width="40dp"
                android:layout_gravity="left"
                android:fontFamily="@font/nanum_square"
                android:background="@color/colorPrimaryDark"
                android:text="뒤로"
                android:textColor="@color/colorPrimary"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/btn_interest_setting_del"
                android:layout_height="wrap_content"
                android:layout_width="40dp"
                android:layout_gravity="right"
                android:fontFamily="@font/nanum_square"
                android:background="@color/colorPrimaryDark"
                android:text="삭제"
                android:textColor="@color/colorPrimary"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/btn_interest_setting_add"
                android:layout_height="wrap_content"
                android:layout_width="40dp"
                android:layout_gravity="right"
                android:fontFamily="@font/nanum_square"
                android:background="@color/colorPrimaryDark"
                android:text="추가"
                android:textColor="@color/colorPrimary"/>

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/text_interest_setting_count"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColor="@color/colorSubTitleBtn"
            android:gravity="center"
            android:textSize="24dp"
            android:textAlignment="center"
            android:text="설정된 관심분야 수"/>


        <LinearLayout
            android:id="@+id/layout_interest_setting_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackgroundDark"
            android:layout_marginLeft="@dimen/content_margin"
            android:layout_marginRight="@dimen/content_margin"
            android:layout_marginBottom="@dimen/content_margin"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>
