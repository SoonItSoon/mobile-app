<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_interest_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:id="@+id/toolbar_title"
                android:text="@string/intrest_setting_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:fontFamily="@font/nanum_square"/>

            <Button
                android:id="@+id/btn_interest_setting_back"
                android:layout_height="wrap_content"
                android:layout_width="40dp"
                android:layout_gravity="left"
                android:fontFamily="@font/nanum_square"
                android:background="@color/colorPrimaryDark"
                android:text="뒤로"
                android:textColor="@color/colorPrimary"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/btn_interest_setting_del"
                android:layout_height="wrap_content"
                android:layout_width="40dp"
                android:layout_gravity="right"
                android:fontFamily="@font/nanum_square"
                android:background="@color/colorPrimaryDark"
                android:text="삭제"
                android:textColor="@color/colorPrimary"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/btn_interest_setting_add"
                android:layout_height="wrap_content"
                android:layout_width="40dp"
                android:layout_gravity="right"
                android:fontFamily="@font/nanum_square"
                android:background="@color/colorPrimaryDark"
                android:text="추가"
                android:textColor="@color/colorPrimary"/>

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/text_interest_setting_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24dp"
            android:textAlignment="center"
            android:text="설정된 관심분야 수"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:layout_margin="@dimen/content_margin"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="8dp"
                android:layout_marginBottom="@dimen/content_margin"
                card_view:cardBackgroundColor="@color/colorPrimaryDark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/content_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="관심분야1"
                        android:textColor="@color/colorPrimary"
                        android:textSize="24dp"
                        android:layout_marginBottom="@dimen/content_margin"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="서울 성북구 재난1 재난1_키워드1"
                        android:textSize="18dp"
                        android:textColor="@color/colorWhite"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="8dp"
                android:layout_marginBottom="@dimen/content_margin"
                card_view:cardBackgroundColor="@color/colorPrimaryDark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/content_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="관심분야2"
                        android:textColor="@color/colorPrimary"
                        android:textSize="24dp"
                        android:layout_marginBottom="@dimen/content_margin"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="경기도 수원시 재난2 재난2_키워드2"
                        android:textSize="18dp"
                        android:textColor="@color/colorWhite"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>
