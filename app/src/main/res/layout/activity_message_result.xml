<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_safety"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:id="@+id/toolbar_title"
                android:text="@string/nav_menu_message_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:fontFamily="@font/nanum_square"/>

            <Button
                android:id="@+id/btn_message_result_back"
                android:layout_height="wrap_content"
                android:layout_width="40dp"
                android:layout_gravity="left"
                android:fontFamily="@font/nanum_square"
                android:background="@color/colorPrimaryDark"
                android:text="뒤로"
                android:textColor="@color/colorPrimary"
                android:layout_marginRight="10dp"/>

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/layout_search_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorBackgroundDark"/>

        <LinearLayout
            android:id="@+id/layout_message_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/content_margin"
            android:paddingLeft="@dimen/content_margin"
            android:paddingBottom="@dimen/content_margin"
            android:orientation="vertical"
            android:background="@color/colorBackgroundDark">

            <TextView
                android:id="@+id/text_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="로딩중..."
                android:textAlignment="center"
                android:paddingTop="@dimen/content_margin"
                android:textSize="24dp"
                android:textColor="@color/colorSubTitleBtn"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </ScrollView>


        </LinearLayout>

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>